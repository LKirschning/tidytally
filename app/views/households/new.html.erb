<h1 class="mt-2">CHOOSE A HOUSENAME</h1>
<div class="d-flex justify-content-center mt-4">
<%= simple_form_for @household do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name, placeholder: "Boddinstr. **", label: false,  input_html: { class: "white-text" } %>

  <%= f.submit :Add!, class: "nes-btn is-success mb-2"%>
<% end %>
</div>
<div class="m-4">
<p>Have a house already?</p>
<%= link_to "click", select_household_path, class: "nes-btn is-normal" %>
</div>
