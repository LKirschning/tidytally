<div class="margintop"></div>
<h2>SIGN UP</h2>
<img src="https://res.cloudinary.com/psmkr/image/upload/v1646735488/images%20for%20tidytally/6595692_qluai4.png" class="home-setup">
<div class="d-flex justify-content-center">
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                label: false,
                placeholder: "email@domain.com",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "white-text" }%>
    <%= f.input :password,
                label: false,
                placeholder: "••••••",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "white-text" } %>
                <%= f.input :password_confirmation,
                placeholder: "••••••",
                required: true,
                input_html: { autocomplete: "new-password", class: "white-text" } %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "READY!", class:"nes-btn is-success" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
