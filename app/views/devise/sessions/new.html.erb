<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "EMAIL", class: "nes-input is-dark" } %>
    <%= f.input :password,
                required: false,
                as: :text,
                input_html: { autocomplete: "current-password", class: "nes-input is-dark" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "LOG IN", class:"nes-btn is-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
