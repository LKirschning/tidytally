<div class="d-flex justify-content-center">
  <h1>TidyTally</h1>
</div>
<h2>LOG IN</h2>
<div class="d-flex justify-content-center">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "EMAIL", class: "white-text" } %>
    <%= f.input :password,
                required: false,
                as: :text,
                input_html: { autocomplete: "new-password", class: "white-text" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
   <%= f.button :submit, "READY!", class:"nes-btn is-success" %>
  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>
