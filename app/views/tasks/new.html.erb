<h1>Create task</h1>

<%= simple_form_for [@room, @task] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
  <%= f.input :date %>
  <%= f.input :interval %>
  <%= f.submit :submit,  class:"nes-btn is-success" %>
<% end %>
